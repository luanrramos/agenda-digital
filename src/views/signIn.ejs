<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Fazer Login</h1>
          <p class="text-center lead"></p>

          <div class="row my-5">

            <div class="col-lg">
              <img width="100%" src="/assets/img/login.svg" alt="">
            </div>

            <div class="col-lg">
              <h4>Entre na sua Conta</h4>

              <%- include('includes/messages'); %>

                <form class="container form-sign-in" action="/logon/login" method="post">
                  <div class="mb-3">
                    <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                    <label for="email" class="form-label">Email</label>
                    <input placeholder="teste@email.com" type="email" class="form-control" id="email" name="email" />
                    <div id="emailHelp" class="form-text">
                      Nós nunca compartilharemos seu email para ninguém.
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input placeholder="6-20 character" type="password" class="form-control" name="password" id="password" />
                  </div>

                  <div class="flex-row">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                    <button type="button" class="btn"><a class="normal-link" href="/logon/signUp">Não tem uma conta? Cadastre-se</a></button>
                  </div>
                </form>
            </div>
          </div>
        </div>
      </div>

    </div>

    <%- include('includes/footer'); %>