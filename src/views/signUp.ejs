<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Cadastre-se</h1>
          <p class="text-center lead"></p>

          <div class="row my-5 ">

            <div class="col-lg">
              <img class="forms-img" src="/assets/img/signup.svg" alt="">
            </div>

            <div class="col-lg">
              <h4>Faça Seu Cadastro</h4>

              <%- include('includes/messages'); %>
                <div class="alert alert-danger hidden" id="alertMessage"></div>

                <form class="container form-sign-up" action="/logon/register" method="post">
                  <div class="mb-3">
                    <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                    <label for="email" class="form-label">Email</label>
                    <input placeholder="jhondoe@email.com" name="email" id="email" type="email" class="form-control">
                    <div id="emailHelp" class="form-text">Nunca iremos compartilhar seu email para ninguém.</div>
                  </div>



                  <div class="mb-3">
                    <label for="password" class="form-label">Senha</label>
                    <input placeholder="6-20 caractéres" name="password" id="password" type="password" class="form-control">
                  </div>
                  <div class="flex-row">
                    <button type="submit" class="btn btn-primary">Cadastre-se</button>
                    <button type="button" class="btn"> <a class="normal-link" href="/logon/signIn">Já tenho uma conta</a></button>
                  </div>
                </form>

            </div>
          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer'); %>